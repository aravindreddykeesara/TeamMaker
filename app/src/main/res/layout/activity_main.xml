<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobileapps.ark.teammaker.MainActivity">

    <EditText
        android:id="@+id/editText_main_no.of.players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:hint="enter no.of players"
        android:inputType="number" />

    <Button
        android:id="@+id/button_main_Go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText_main_no.of.players"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="26dp"
        android:text="Go!" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_main_playernumbers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/editText_main_no.of.players"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:visibility="visible" />

</RelativeLayout>
